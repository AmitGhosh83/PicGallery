@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "ListRoles";
}

<h1>All Roles</h1>

<div>
    <a class="btn btn-primary" asp-controller="Administration" asp-action="CreateRole"> Add New Role</a>
</div>
<hr />

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a class="btn btn-outline-primary" asp-action="EditRole" asp-controller="Administration" asp-route-id="@item.Id">Edit</a> |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="card">
        <div class="card-header">
            No Roles Created Yet
        </div>
        <div class="card-body">
            <h5> use the link below to create a new role</h5>
        </div>
        <a class="btn btn-primary" asp-controller="Administration" asp-action="CreateRole"> Create Role</a>

    </div>

}