@model KudVenvat1.ViewModels.EmployeeEditViewModel

@{
    ViewData["Title"] = "Edit";
    var photoPath = "~/Images/" + (Model.ExistingPhotoPath ?? "wRlb2pN.jpg");
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Home" asp-action="Edit" enctype="multipart/form-data" method="post" class="mt-3">
            <div asp-validation-summary="All" class="text-danger"></div>
            @*<input hidden asp-for="Id"/>*@
            <input hidden asp-for="ExistingPhotoPath"/>
            <div class="form-group row">
                <label asp-for="Name" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Department" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <select asp-for="Department" asp-items="@Html.GetEnumSelectList<Dept>()" class="form-control custom-select mr-sm-1">
                        <option value="">Please Select</option>
                    </select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Photo" class="col-md-3 col-form-label">Change Photo</label>
                <div class="col-md-9">
                    <input multiple asp-for="Photo" class="form-control-file" placeholder="Click here to change photo" />
                    @*<div class="col-md-9 form-row">
                        <label class="custom-file-label">Click here to change photo</label>
                    </div>*@
                    <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                </div>
            <div class="form-group row offset-4">
                <img class="card-img-top" src=@photoPath asp-append-version="true" />
                <hr/>
            </div>
            <div class="form-group row">
                <input type="submit" value="Update" class="btn btn-outline-primary m-1" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-danger m-1" >Cancel</a>
                <hr />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
