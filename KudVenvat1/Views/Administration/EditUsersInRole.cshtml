@model List<PicGallery.ViewModels.UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}
<h1>Edit users and their roles</h1>
<form method="post">
    <div class="card">
        <div class="card-header">
            <h5 class="alert-heading mt-2">Users</h5>
        </div>
        <div class="card-body">
            @*@for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-2">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }*@

            @foreach (var item in Model)
            {<div class="form-check m-2">
                    <input type="hidden" asp-for="@item.UserId" />
                    <input type="hidden" asp-for="@item.UserName" />
                    <input asp-for="@item.IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@item.IsSelected">
                        @item.UserName
                    </label>
                </div>

            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-outline-primary" />
            <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@roleId" class="btn btn-outline-dark">Cancel</a>
        </div>

    </div>
</form>

